    "def L_i_vectorized(x, y, W):\n",
    "    scores = W.dot(x)\n",
    "    margins = np.maximum(0, scores - scores[y] + 1)\n",
    "    margins[y] = 0 # zero out the margins corresponding to the correct class\n",
    "    loss_i = np.sum(margins)\n",
    "    return loss_i"
   ]
